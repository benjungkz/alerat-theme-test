                        <img data-src="{{ 'team-jeff.jpg' | asset_url }}" alt="" class="card__image card__image--team lazyload">
                        <div class="card__content card__content--team">
                            <h4 class="card__title card__title--team">Jeff Seeley</h4>
                            <p class="card__desc card__desc--team">Operations</p>
