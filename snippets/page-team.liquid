<section class="section section--col" id="team">   
    <!-- CEO -->
    <div class="card__container">
        <div class="grid__container">
            <div class="grid__row">
                <div class="grid__col-xxl--12 grid__col-xl--12 grid__col-lg--12 grid__col-md--12 grid__col-xs--12 grid__col--flex-row">
                    <div class="card card--team card--ceo" data-aos="fade-up" data-aos-easing="ease-in-out-cubic" data-aos-duration="500">
                        <img class="card__image card__image--team card__image--ceo lazyload" src="{{ 'ceo-john.jpg' | asset_url }}" alt="Track Patch 1 CEO John Resse">

                        <div class="card__content--team card__content--ceo">
                            <h3 class="card__title card__title--ceo">John Reese, CEO</h3>
                            <p class="card__desc card__desc--ceo">John Reese is the inventor of Alerta and is the founder and CEO of Track Patch 1 Corporation. </p>        
                            <div class="btn card__link card__link--ceo">
                                <a class="card__desc" href="https://youtu.be/R7TWv7D3Vh8" data-lity>Watch Video</a>
                                {% render 'icon-video' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>

    <!-- Team memebers -->
    <div class="card__container">
        <div class="grid__container">
