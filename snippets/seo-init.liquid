<!-- <meta property="fb:app_id" content="">-->


<!-- SEO for Twitter -->
<meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title }}">
<meta name="twitter:description" content="{{ og_description }}">
<meta name="twitter:image" content="https://cdn.shopify.com/s/files/1/1661/6207/files/alerta-twitter.jpg">

<!-- Shema.org (Google+) -->
<meta itemprop="name" content="{{ og_title }}">
<meta itemprop="description" content="{{ og_description }}">
<meta itemprop="image" content="https://cdn.shopify.com/s/files/1/1661/6207/files/alerta-facebook.jpg">