{% assign image_amount_by_product_option = 8 %}
{% assign option_class_1 = "option-white" %}
{% assign option_class_2 = "option-black" %}


<!-- Option 1 -->
<div class="grid__col-xxl--6 grid__col-xl--6 grid__col-lg--12 grid__col-md--12 grid__col-xs--12 grid__col--flex-row {{ option_class_1 }}">
    <div class="slider__container slider__container--single-product">
         <div class="slider--main js-slider--main">
            {% for image in product.images %}    
                {% if forloop.index <= image_amount_by_product_option %}
                <div class="slider">            
                    <div class="slider__image slider__image--product">
                        <picture>
                            <img src="{{ image.src | img_url: 'master'}}" alt="{{ image.alt }}">
                        </picture>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
        
        <div class="slider--nav js-slider--nav">
            {% for image in product.images %}   
                 {% if forloop.index <= image_amount_by_product_option%} 
                <div class="slider">            
                    <div class="slider__image slider__image--nav">
                        <picture>
                            <img src="{{ image.src | img_url: '100x100'}}" alt="{{ image.alt }}">
                        </picture>
                    </div>
                </div>
                 {% endif %}
            {% endfor %}
        </div>
        
    </div>
</div>
 

 
