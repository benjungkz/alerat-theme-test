{% schema %}
    {   
         "blocks": [
            {
                "type": "benefit",
                "name": "Benefit",
                "settings": [
                    {
                       "id": "benefit_title",
                       "type": "textarea",
                       "label": "Title"
                    },
                    {
                       "id": "benefit_desc_1",
                       "type": "textarea",
                       "label": "Benefit(1)"
                    },
                    {
                       "id": "benefit_desc_2",
                       "type": "textarea",
                       "label": "Benefit(2)"
                    },
                    {
                       "id": "benefit_desc_3",
                       "type": "textarea",
                       "label": "Benefit(3)"
                    },
                    {
                       "id": "benefit_desc_4",
                       "type": "textarea",
                       "label": "Benefit(4)"
                    },
                    {
                        "type": "checkbox",
                        "id": "benefit_is_video",
                        "label": "Video?",
                        "default": false,
                        "info": "(Youtube Video)"
                    },
                    {
                        "type": "video_url",
                        "id": "benefit_video",
                        "label": "Video URL",
