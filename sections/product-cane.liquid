                    }
                ]
            },
            {
                "type": "spec",
                "name": "Specifications",
                "settings": [
                    {
                        "type": "text",
                        "id": "spec_desc",
                        "label": "Spec Desc"
                    }
                ]
            },
            {
                "type": "resource",
                "name": "Resource",
                "settings": [
                    {
                        "type": "text",
                        "id": "resource_desc",
                        "label": "Resource Desription"
                    },
                    {
                        "type": "text",
                        "id": "resource_link",
                        "label": "Resource link(URL)"
                    }
                ]
            },
            {
                "type": "event",
                "name": "Event",
                "settings": [
                    {
                        "type": "text",
                        "id": "event_name",
                        "label": "Event name"
                    },
                    {
                        "type": "image_picker",
                        "id": "event_image",
                        "label": "Event icon/image"
                    }
                ]
            },
            {
                "type": "video",
                "name": "Video",
                "settings": [
                    {
                        "type": "video_url",
                        "id": "video_url",
                        "label": "Section Video URL",
                        "accept": ["youtube"]
                    },
                    {
                        "type": "image_picker",
                        "id": "video_poster",
                        "label": "Poster Image"
                    },
                    {
                        "type": "checkbox",
                        "id": "video_primary",
                        "label": "Primary Video?",
                        "default": false
                    }
                ]
            },
            {
                "type": "usage",
                "name": "Actual Usage",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "usage_icon",
                        "label": "Usage Icon"
                    },
                    {
                        "type": "text",
                        "id": "usage_description",
                        "label": "Usage Description"
                    }
                ]
            },
            {
                "type": "summary",
                "name": "Summary",
                "settings": [
                   {
                       "type": "text",
                       "id": "summary",
                       "label": "Summary"
                   }
                ]
            }
        ],

        "name" : "Product Page",
        "settings": [
            {
                "type": "text",
                "id": "product_bedge",
                "label": "Bedge"
            },
            {
                "type": "image_picker",
                "id": "product_logo",
                "label": "Logo"
            },
            {
                "type": "textarea",
                "id": "product_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "product_desc",
                "label": "Description"
            },
            {
                "type": "checkbox",
                "id": "product_summary",
                "label": "Summary?",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "product_summary_col",
                "label": "Summary have 2 colums?",
