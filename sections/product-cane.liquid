            {
                "type": "textarea",
                "id": "product_tagline",
                "label": "Tagline Description"
            },
            {
                "type": "text",
                "id": "product_slider_btn_url",
                "label": "Tagline Button URL"
            },
            {
                "type": "text",
                "id": "product_slider_btn_text",
                "label": "Tagline Button Text"
            }
        ] 
    }
