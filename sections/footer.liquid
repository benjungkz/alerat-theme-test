          "label": "Company Phone Number"
      },
      {
          "type": "text",
          "id": "footer_social_facebook_url",
          "label": "Facebook URL"
      },
      {
          "type": "text",
          "id": "footer_social_instagram_url",
          "label": "Instagram URL"
      },
      {
          "type": "text",
          "id": "footer_social_youtube_url",
          "label": "Youtube URL"
      },
      {
          "type": "text",
          "id": "footer_social_twitter_url",
          "label": "Twitter URL"
      },
      {
          "type": "text",
          "id": "footer_social_linkedin_url",
          "label": "Linkedin URL"
      },
      {
          "type": "text",
          "id": "footer_copyright",
          "label": "Copyright"
      }
    ]
  }

{% endschema %}