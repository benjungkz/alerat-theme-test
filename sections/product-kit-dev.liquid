{% schema %}
    {   
         "blocks": [
            {
                "type": "benefit",
                "name": "Benefit",
                "settings": [
                    {
                       "id": "benefit_title",
                       "type": "textarea",
                       "label": "Title"
                    },
                    {
                       "id": "benefit_desc_1",
                       "type": "textarea",
                       "label": "Benefit(1)"
                    },
                    {
                       "id": "benefit_desc_2",
                       "type": "textarea",
                       "label": "Benefit(2)"
                    },
                    {
                       "id": "benefit_desc_3",
                       "type": "textarea",
                       "label": "Benefit(3)"
                    },
                    {
                       "id": "benefit_desc_4",
                       "type": "textarea",
                       "label": "Benefit(4)"
                    },
                    {
                       "id": "benefit_desc_5",
                       "type": "textarea",
                       "label": "Benefit(5)"
                    },
                    {
                        "type": "checkbox",
                        "id": "benefit_is_video",
                        "label": "Video?",
                        "default": false,
                        "info": "(Youtube Video)"
                    },
                    {
                        "type": "video_url",
                        "id": "benefit_video",
                        "label": "Video URL",
                        "accept": ["youtube"]
                    },
                    {
                        "type": "checkbox",
                        "id": "benefit_is_image",
                        "label": "Image?",
                        "default": false
                    },
                    {
                        "type": "image_picker",
                        "id": "benefit_image",
                        "label": "Benefit Image"
                    },
                    {
                       "id": "benefit_order",
                       "type": "text",
                       "label": "Order"
                    }
                ]
            },
            {
                "type": "box",
                "name": "Box",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "box_image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "box_title",
                        "label": "Title"
                    },
                    {
                        "type": "checkbox",
                        "id": "box_primary",
                        "label": "Primary?",
                        "default": false
                    }
                ]
            },
            {
                "type": "spec",
                "name": "Specifications",
                "settings": [
                    {
                        "type": "text",
                        "id": "spec_desc",
                        "label": "Spec Desc"
                    }
                ]
            },
            {
                "type": "resource",
                "name": "Resource",
                "settings": [
                    {
                        "type": "text",
                        "id": "resource_desc",
                        "label": "Resource Desription"
                    },
                    {
                        "type": "text",
                        "id": "resource_link",
                        "label": "Resource link(URL)"
                    }
                ]
            },
            {
                "type": "event",
                "name": "Event",
                "settings": [
                    {
                        "type": "text",
                        "id": "event_name",
                        "label": "Event name"
                    },
                    {
                        "type": "image_picker",
                        "id": "event_image",
                        "label": "Event icon/image"
                    }
                ]
            },
            {
                "type": "option",
                "name": "Option",
                "settings": [
                    {
                        "type": "text",
                        "id": "option_name",
                        "label": "Option Name"
                    },
                    {
                        "type": "product",
                        "id": "option_product",
                        "label": "option Product"
                    },
                    {
                        "type": "text",
                        "id": "option_url",
                        "label": "Option Product URL"
                    }
                ]
            },
            {
                "type": "video",
                "name": "Video",
                "settings": [
                    {
                        "type": "video_url",
                        "id": "video_url",
                        "label": "Section Video URL",
                        "accept": ["youtube"]
                    },
                    {
                        "type": "image_picker",
                        "id": "video_poster",
                        "label": "Poster Image"
                    },
                    {
                        "type": "checkbox",
                        "id": "video_primary",
                        "label": "Primary Video?",
                        "default": false
                    }
                ]
            },
            {
                "type": "summary",
                "name": "Summary",
                "settings": [
                   {
                       "type": "text",
                       "id": "summary",
                       "label": "Summary"
                   }
                ]
            }
        ],

        "name" : "Product Page",
        "settings": [
            {
                "type": "text",
                "id": "product_bedge",
                "label": "Bedge"
            },
            {
                "type": "image_picker",
                "id": "product_logo",
                "label": "Logo"
            },
            {
                "type": "textarea",
                "id": "product_title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "product_desc",
                "label": "Description"
            },
            {
                "type": "collection",
                "id": "product_upsell",
                "label": "Upsell Collection"
            },
            {
                "type": "collection",
                "id": "product_downsell",
                "label": "Downsell Collection"
            },
            {
                "type": "checkbox",
                "id": "product_summary",
                "label": "Summary?",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "product_option_image_change",
                "label": "Image Change by options?",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "product_option",
                "label": "Custom Option?",
                "info": "If product have different product pages by option, please check the box and add option block",
                "default": false
            },
            {
                "type": "text",
                "id": "product_option_name",
                "label": "Option name",
                "info": "If it's neccessary."
            },
            {
                "type": "checkbox",
                "id": "product_section_video",
                "label": "Section Video?",
                "default": false
            },
            {
                "type": "video_url",
                "id": "product_section_video_url",
                "label": "Section Video URL",
                "accept": ["youtube"]
            },
            {
                "type": "image_picker",
                "id": "product_section_video_poster",
                "label": "Poster Image"
            },
            {
                "type": "checkbox",
                "id": "product_section_newsletter",
                "label": "Section Newsletter?",
                "default": false
            },
            {
                "type": "text",
                "id": "product_newsletter_title",
                "label": "Newsletter Title"
            },
            {
                "type": "text",
                "id": "product_newsletter_sub_title",
                "label": "Newsletter Sub Title"
            },
            {
                "type": "text",
                "id": "product_newsletter_button_text",
                "label": "Newsletter Button Text"
            },
            {
                "type": "textarea",
                "id": "product_tagline",
                "label": "Tagline Description"
            },
            {
                "type": "text",
                "id": "product_slider_btn_url",
                "label": "Tagline Button URL"
            },
            {
                "type": "text",
                "id": "product_slider_btn_text",
                "label": "Tagline Button Text"
            }
        ] 
    }
